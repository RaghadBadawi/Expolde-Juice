<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="add_ingredients.Views.Log_in">
    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="#FFF6F0" Spacing="30">
            <Label Text="Login" FontSize="50" TextColor="#311403" >
            </Label>
            <Frame BackgroundColor="White" BorderColor="#311403" CornerRadius="20" >
                <Entry x:Name="UsernameEntry" Placeholder="Username" PlaceholderColor="#311403" />
            </Frame>
            <Frame BackgroundColor="White" BorderColor="#311403" CornerRadius="20" >
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" PlaceholderColor="#311403"/>
            </Frame>
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="checkBoxButton" 
                      BackgroundColor="White" 
                      HeightRequest="30" WidthRequest="30" 
                      HorizontalOptions="Start"
                          Color="#311403"/>

                <Label Text="Remember Me" 
                       FontSize="Large"
                       TextColor="#311403"
                       HorizontalOptions="Start"/>


            </StackLayout>
            <Button x:Name="loginButton" 
                    Text="Login" 
                    TextColor="#EFB897"
                    Clicked="LoginButtonClicked" 
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="60"
                    WidthRequest="300"
                    CornerRadius="30"
                    BackgroundColor="#311403"/>
     
        </StackLayout>
    </ContentPage.Content>
</ContentPage>